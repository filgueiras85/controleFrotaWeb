<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/controlefrota</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">postgres</property>
    <!--property name="connection_pool_size">1</property-->
    <property name="hibernate.show_sql">true</property>
    <mapping resource="Modelo/TbUsuario.hbm.xml"/>
    <mapping resource="Modelo/TbSaida.hbm.xml"/>
    <mapping resource="Modelo/TbTipoVeiculo.hbm.xml"/>
    <mapping resource="Modelo/TbCombustivel.hbm.xml"/>
    <mapping resource="Modelo/TbVeiculo.hbm.xml"/>
    <mapping resource="Modelo/TbFuncao.hbm.xml"/>
    <mapping resource="Modelo/TbRevisao.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
